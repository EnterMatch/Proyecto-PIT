<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="mybatis.mapper.GrupoMapper">
 
 	<insert id="registrar" parameterType="grupo">
 		insert into tb_grupo
 		values (#{id_gru},#{nombre_gru})
 	</insert>
 	
 	<update id="actualizar" parameterType="grupo">
 		update tb_grupo set  nombre_gru=#{nombre_gru}
 		where id_gru=#{id_gru}
 	</update>
 	
 	<delete id="eliminar" parameterType="int">
 		delete from tb_grupo
 		where id_gru=#{id}
 	</delete>
 	
 	<select id="getGrupos" resultMap="grupo">
 		select 	id_gru,
				nombre_gru
 		from tb_grupo
 	</select>
 
 </mapper>