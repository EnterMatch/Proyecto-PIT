<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="mybatis.mapper.OperadorMapper">
 
 	<insert id="registrar" parameterType="operador">
 		insert into tb_operador
 		values (#{id_per},#{id_tipo_ope},#{id_gru})
 	</insert>
 	
 	<update id="actualizar" parameterType="operador">
 		update tb_operador set  id_tipo_ope=#{id_tipo_ope},
 								id_gru=#{id_gru}
 		where id_per=#{id_per}
 	</update>
 	
 	<delete id="eliminar" parameterType="int">
 		delete from tb_operador
 		where id_per=#{id}
 	</delete>
 	
 	<select id="getOperadores" resultMap="operador">
 		select 	id_per,
				id_tipo_ope,
				id_grupo,
 		from tb_operador
 	</select>
 
 </mapper>