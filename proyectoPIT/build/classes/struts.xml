<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD
StrutsConfiguration
2.3//EN"
"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<constant name="struts.custom.i18n.resources" value="LogueoAction"/>
		<package name="Proyecto" extends="struts-default">
		
		<!-- Definici贸n de tiles -->
		<result-types>
			<result-type name="tiles"
			class="org.apache.struts2.views.tiles.TilesResult" />
		</result-types>
		<!-- Fin Definici贸n de tiles -->
		
		
		<!-- Action para logueo -->
		<action name="bienvenido" class="action.LogueoAction" method="loguear">
			<result name="ok" type="tiles">plantilla_ListarIncidente</result>
			<result name="error">index.jsp</result>
		</action>
		<!-- Fin Action para logueo -->
		
		
		<!-- Actions de navegaci贸n --> 
		<action name="RegistroIncidente" class="action.LogueoAction" method="cargarCombos">
			<result name="ok" type="tiles">plantilla_principal</result>
		</action>
		
		<action name="ConsultarIncidente">
			<result type="tiles">plantilla_ConsultarIncidente</result>
		</action>
		
		<action name="ListarIncidente" class="action.ListarIncidenciaAction" method="listarIncidentes">
			<result name="ok"  type="tiles">plantilla_ListarIncidente</result>
		</action>
		
		<action name="registroIncidente" class="action.RegistroIncidenciaAction" method="cargarCombos">
			<result name="ok" type="tiles">plantilla_RegistrarSolucion</result>
		</action>
		
		<action name="RegistrarSolucion">
			<result type="tiles">plantilla_RegistrarSolucion</result>
		</action>
		
		<action name="ListarBD">
			<result type="tiles">plantilla_ListarBD</result>
		</action>
		
		<action name="RegistrarUsuario" class="action.RegistroUsuarioAction" method="cargarSelects">
			<result name="cargarSelects" type="tiles">plantilla_RegistrarUsuario</result>
		</action>
		
		<action name="listar" class="action.AsignarIncidenciaAction" method="asignar">
			<result type="tiles" name="asignar">plantilla_AsignarIncidente</result>
		</action>
		
		<action name="consultar" class="action.MantenerIncidenciaAction" method="mantener">
			<result type="tiles" name="mantener">plantilla_MantenerIncidente</result>
		</action>
		
		<action name="ReporteIncidente">
			<result type="tiles">plantilla_ReporteIncidente</result>
		</action>
		<!-- Fin de actions de navegaci贸n -->

		
		<action name="ConsultarIncidente" class="action.ListarIncidenciaAction" method="listarIncidentes"> 
			<result name="ok" type="tiles">plantilla_ConsultarIncidente</result>
		</action>
		
		<action name="registrando" class="action.RegistroIncidenciaAction" method="registrar"> 
			<result name="Exito" type="tiles">plantilla_ConsultarIncidente</result>
			<result name="Error" type="tiles">plantilla_ConsultarIncidente</result>
		</action>

	</package>
</struts>
