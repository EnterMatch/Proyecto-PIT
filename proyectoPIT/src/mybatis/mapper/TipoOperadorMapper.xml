<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mybatis.mapper.TipoOperadorMapper"> 

 <select id="getTipoOperador" resultType="Tipo_Operador">
        SELECT id_tipo_ope,
               desc_tipo_ope as descripcion
        FROM tb_tipo_operador
    </select>
    
       <insert id="registrar" parameterType="Tipo_Operador">
    	insert into tb_tipo_operador(id_tipo_ope,desc_tipo_ope)
    	values(#{id_tipo_ope},#{descripcion});
    </insert> 
   
    <update id="actualizar" parameterType="Tipo_Operador">
    	update tb__tipo_operador set desc_tipo_ope= #{descripcion},
    				where id_tipo_ope = #{id_tipo_ope};
    </update>
    
    <delete id="eliminar" parameterType="int">
    	DELETE FROM tb_tipo_operador
    	WHERE id_tipo_ope = #{id_tipo_ope}
    </delete>

</mapper>